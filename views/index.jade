extends layout

block content
  h1= title
  form(method="get")
    div.input
      input(type="text", name="word")
    div.actions
      input(type="submit", value="submit")
  p anagram dari kata #{word} adalah :
  if word
    ul
      each anagram in anagrams.length ? anagrams : ['There are no values']
        li= anagram
