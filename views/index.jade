extends layout

block content
  h1= title
  p anagram dari kata #{word} adalah :
  if word
    ul
      each anagram in anagrams.length ? anagrams : ['There are no values']
        li= anagram.word

  .row
    form(action='/', method='get')
      .row
        .input-field.col.s9
          input#link(placeholder='Enter word here', type='text', name='word')
        .input-field.col.s2
          input.btn(type='submit', value='Submit')
      .row
