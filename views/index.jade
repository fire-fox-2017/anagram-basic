extends layout

block content
  h1= title
  p anagram dari kata #{word} adalah :
  if word
    ul
      each anagram in anagrams.length ? anagrams : ['There are no values']
        li= anagram
  form(name="add-estimation", method="post")
    div.input
        span.label Title
        input(type="text", name="title")
      div.actions
        input(type="submit", value="add")
